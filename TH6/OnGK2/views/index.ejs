<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>On GK 2</title>
  </head>

  <body>
    <div class="content">

      <a href="/views/save.ejs">Add new</a>

      <table border="1">
        <tr>
          <th>STT</th>
          <th>ChiSoISBN</th>
          <th>NamXuatBan</th>
          <th>SoTrang</th>
          <th>TenBaiBao</th>
          <th>TenNhomTacGia</th>
        </tr>

        <% baiBaos.map(item=> { %>
        <tr>
          <td><%=item.STT%></td>
          <td><%=item.ChiSoISBN%></td>
          <td><%=item.NamXuatBan%></td>
          <td><%=item.SoTrang%></td>
          <td><%=item.TenBaiBao%></td>
          <td><%=item.TenNhomTacGia%></td>

          <td>
            <form action="/delete" method="post" enctype="multipart/form-data">
              <input type="hidden" name="STT" value="<%=item.STT%>" />

              <input type="submit" value="Xoa" />
            </form>
          </td>
        </tr>

        <% }) %>
      </table>
    </div>
  </body>
</html>
